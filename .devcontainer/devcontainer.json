{
	"name": "Entorno Agro-IA",
	"image": "mcr.microsoft.com/devcontainers/python:3.10",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter",
				"james-yu.latex-workshop", 
				"MS-CEINTL.vscode-language-pack-es"
			],
			"settings": {
				"latex-workshop.view.pdf.viewer": "tab",
				"latex-workshop.latex.autoBuild.run": "onSave"
			}
		}
	},
	"postCreateCommand": "pip install -r requirements.txt && sudo apt-get update && sudo apt-get install -y texlive-latex-extra texlive-lang-spanish texlive-science latexmk",
	"features": {
		"ghcr.io/devcontainers/features/git:1": {}
	}
}
